<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent">


    <View android:layout_width="103dp" android:layout_height="121dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.918"
          android:id="@+id/view7" app:layout_constraintVertical_bias="0.245"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="@+id/view5"/>
    <View android:layout_width="253dp" android:layout_height="108dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.113"
          android:id="@+id/view6" app:layout_constraintVertical_bias="0.251"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <View android:layout_width="238dp" android:layout_height="175dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.819"
          android:id="@+id/view5" app:layout_constraintVertical_bias="0.456" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>
    <View android:layout_width="98dp" android:layout_height="176dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.051"
          android:id="@+id/temperature" app:layout_constraintVertical_bias="0.457"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
          android:layout_marginStart="32dp"/>
    <View android:layout_width="107dp" android:layout_height="96dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.052" app:layout_constraintVertical_bias="0.806"
          android:id="@+id/view1"/>

    <Button android:layout_width="51dp" android:layout_height="50dp"
            android:drawableTop="@mipmap/warning"
            android:background="@drawable/mainmenu_background"
            app:layout_constraintStart_toStartOf="@+id/view1" app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/view1" app:layout_constraintTop_toTopOf="@+id/view1"
            app:layout_constraintHorizontal_bias="0.142" app:layout_constraintVertical_bias="0.782"
            android:id="@+id/button"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Buttons"
              android:textSize="20sp"
              android:textColor="#000000"
              app:layout_constraintTop_toTopOf="@+id/view1"
              app:layout_constraintBottom_toBottomOf="@+id/view1" app:layout_constraintVertical_bias="0.101"
              app:layout_constraintEnd_toEndOf="@+id/view1" app:layout_constraintStart_toStartOf="@+id/view1"
              app:layout_constraintHorizontal_bias="0.055" android:id="@+id/textView7"/>
    <View android:layout_width="250dp" android:layout_height="96dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.9"
          android:id="@+id/view2" app:layout_constraintVertical_bias="0.806"/>
    <Button android:layout_width="109dp" android:layout_height="56dp"
            android:drawableLeft="@mipmap/light"
            android:text="Light"
            android:background="@drawable/mainmenu_background"
            app:layout_constraintStart_toStartOf="@+id/view2" app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2" app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.099" app:layout_constraintVertical_bias="0.75"/>
    <Button android:layout_width="109dp" android:layout_height="52dp"
            android:drawableLeft="@mipmap/heater"
            android:text="Heater"
            android:background="@drawable/mainmenu_background"
            app:layout_constraintStart_toStartOf="@+id/view2" app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2" app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.929" app:layout_constraintVertical_bias="0.772"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Switches"
              android:textSize="20sp"
              android:textColor="#000000"
              app:layout_constraintTop_toTopOf="@+id/view2"
              app:layout_constraintBottom_toBottomOf="@+id/view2" app:layout_constraintVertical_bias="0.095"
              app:layout_constraintEnd_toEndOf="@+id/view2" app:layout_constraintStart_toStartOf="@+id/view2"
              app:layout_constraintHorizontal_bias="0.088"/>

    <View android:layout_width="200dp" android:layout_height="100dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.075" app:layout_constraintVertical_bias="0.664"
          android:id="@+id/view3"/>
    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:max="100"
            android:progress="50"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/view3" app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3" app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.428" app:layout_constraintVertical_bias="0.828"/>

    <TextView
            android:id="@+id/seekBar_tv"
            android:layout_width="136dp"
            android:layout_height="41dp"
            android:text="@string/seekBar_text"
            android:padding="20dp" app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/seekBar"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Fans"
              android:textSize="20sp"
              android:textColor="#000000"
              app:layout_constraintTop_toTopOf="@+id/view3"
              app:layout_constraintBottom_toBottomOf="@+id/view3" app:layout_constraintVertical_bias="0.095"
              app:layout_constraintEnd_toEndOf="@+id/view3" app:layout_constraintStart_toStartOf="@+id/view3"
              app:layout_constraintHorizontal_bias="0.038" android:id="@+id/textView"/>

    <View android:layout_width="161dp" android:layout_height="97dp"
          android:background="@drawable/mainmenu_background"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toTopOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.942" app:layout_constraintVertical_bias="0.666"
          android:id="@+id/view4"/>
    <ProgressBar android:layout_width="128dp" android:layout_height="10dp"
                 app:layout_constraintTop_toBottomOf="@+id/textView2"
                 app:layout_constraintStart_toStartOf="@+id/view4" app:layout_constraintBottom_toBottomOf="@+id/view4"
                 app:layout_constraintVertical_bias="0.452" app:layout_constraintEnd_toEndOf="@+id/view4"
                 app:layout_constraintHorizontal_bias="0.636"
                 style="@android:style/Widget.ProgressBar.Horizontal" android:id="@+id/progressBar2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Progress"
              android:textSize="20sp"
              android:textColor="#000000"
              app:layout_constraintTop_toTopOf="@+id/view4"
              app:layout_constraintBottom_toBottomOf="@+id/view4" app:layout_constraintVertical_bias="0.095"
              app:layout_constraintEnd_toEndOf="@+id/view4" app:layout_constraintStart_toStartOf="@+id/view4"
              app:layout_constraintHorizontal_bias="0.088" android:id="@+id/textView2"/>
    <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="#FFFFFF"
            android:text="chart" app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintVertical_bias="0.082"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="110dp" app:srcCompat="@drawable/temperature" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/temperature" app:layout_constraintTop_toTopOf="@+id/temperature"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="139dp"
            android:layout_height="146dp" app:srcCompat="@drawable/dashboard" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/view5" app:layout_constraintBottom_toBottomOf="@+id/view5"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/temperature"
            app:layout_constraintEnd_toEndOf="@+id/temperature" app:layout_constraintTop_toTopOf="@+id/temperature"
            android:layout_marginTop="120dp" app:layout_constraintHorizontal_bias="0.777"/>
    <TextView
            android:text="Humidity"
            android:layout_width="77dp"
            android:layout_height="22dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintHorizontal_bias="0.061" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view5" android:layout_marginTop="60dp" android:textSize="18sp"/>
    <TextView
            android:text="60 %"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintTop_toTopOf="@+id/view5" android:layout_marginTop="108dp"/>
    <TextView
            android:text="30℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/temperature" app:layout_constraintEnd_toEndOf="@+id/temperature"
            app:layout_constraintBottom_toBottomOf="@+id/temperature" android:textSize="24sp"/>
    <ImageView
            android:layout_width="127dp"
            android:layout_height="101dp" app:srcCompat="@drawable/icon_status_progress_circle"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/view6" app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintTop_toTopOf="@+id/view6" app:layout_constraintHorizontal_bias="0.753"/>
    <TextView
            android:text="Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/view6" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textSize="18sp"/>
    <TextView
            android:text="75%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/view6" app:layout_constraintBottom_toBottomOf="@+id/view6"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:layout_marginBottom="4dp"
            android:textSize="30sp"/>
    <RadioGroup
            android:layout_width="83dp"
            android:layout_height="104dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintTop_toTopOf="@+id/view7" android:id="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="@+id/view7">
        <RadioButton
                android:text="Radio"
                android:layout_width="match_parent"
                android:layout_height="48dp" android:id="@+id/radioButton3"
        />
        <RadioButton
                android:text="Radio"
                android:layout_width="86dp"
                android:layout_height="48dp" android:id="@+id/radioButton2"
        />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>