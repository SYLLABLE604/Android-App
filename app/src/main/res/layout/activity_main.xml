<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/id"
            android:layout_width="98dp" android:layout_height="39dp"
            android:text="ID Number"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="277dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:id="@+id/password"
            android:layout_width="98dp" android:layout_height="39dp"
            android:text="Password"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/id"
            app:layout_constraintTop_toBottomOf="@+id/id" android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/id" app:layout_constraintHorizontal_bias="1.0"/>

    <EditText
            android:id="@+id/space1"
            android:layout_width="197dp"
            android:layout_height="39dp"
            android:hint="input your id number"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/id"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.137" app:layout_constraintTop_toTopOf="@+id/id"/>
    <EditText
            android:id="@+id/space2"
            android:layout_width="197dp"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="input the password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/space1"
            app:layout_constraintStart_toStartOf="@+id/space1" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/password"/>

    <Button
            android:id="@+id/btn_MainMenu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="@drawable/gray_button"
            android:text="Login" app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintVertical_bias="0.242"/>

</androidx.constraintlayout.widget.ConstraintLayout>